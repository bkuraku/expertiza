    if(selected_option == "<%=Question::CHECK_BOX %>")
    {
       table = element.parentNode.parentNode.parentNode; //to get the row in which this is being added
       row = table.insertRow(-1);
       column = document.createElement("td");
        column.setAttribute('colspan',4);
       innertable = document.createElement("table"); //create a column which
       checkbox_options = "<tbody>";
        for(i=1;i<5;i++)
        {
         checkbox_options = checkbox_options + "<tr> ";
           checkbox_options = checkbox_options + "<td> Enter option "+i+" for checkbox </td>";
           checkbox_options = checkbox_options + "<td> <input id=checkbox_option_" + i + " size=50 type=text/> </td>";
         checkbox_options = checkbox_options + "</tr>";
        }
        checkbox_options = checkbox_options +"</tbody>";
        innertable.innerHTML = checkbox_options;
